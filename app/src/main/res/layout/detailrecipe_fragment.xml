<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detailRecipesFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/detailRecipesFragment_textView"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginStart="4dp"
            android:text="@string/detailStepsFragment_ingredientsLabelTextView"
            android:gravity="start|center"
            android:textStyle="bold"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/detailRecipesFragment_listIngredientRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:layoutAnimation="@anim/fromtop_layoutanimation" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/detailRecipesFragment_textView2"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginStart="4dp"
            android:text="@string/detailStepsFragment_stepsLabelTextView"
            android:gravity="start|center"
            android:textStyle="bold"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/detailRecipesFragment_listStepRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:layoutAnimation="@anim/fromtop_layoutanimation" />


        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

        <ProgressBar
            android:id="@+id/detailRecipesFragment_loadProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:elevation="4dp"
            android:visibility="invisible"/>

    </LinearLayout>
</ScrollView>