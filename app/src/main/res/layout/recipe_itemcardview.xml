<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recipe_CardView"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:layout_margin="8dp"
    android:elevation="2dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="2dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/recipePicture_ImageView"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_broken_image_24px" />

        <TextView
            android:id="@+id/recipeName_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recipePicture_ImageView"
            android:gravity="bottom|left"
            android:layout_marginLeft="16dp"
            android:height="44dp"
            android:fontFamily="@font/roboto"
            android:maxLines="3"
            android:text="@string/recipeName"
            android:textColor="#222"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recipeServings_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recipeName_TextView"
            android:drawableLeft="@drawable/ic_baseline_restaurant_24px"
            android:drawablePadding="8dp"
            android:gravity="bottom|left"
            android:layout_marginLeft="16dp"
            android:height="32dp"
            android:fontFamily="@font/roboto"
            android:maxLines="1"
            android:text="@string/servings"
            android:textColor="#666"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>
</android.support.v7.widget.CardView>







