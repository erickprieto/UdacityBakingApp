<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:background="@color/colorSecondary300">

    <TextView
        android:id="@+id/ingredientItem_nameTextView"
        android:drawableStart="@drawable/ic_baseline_label_24px"
        android:drawablePadding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginTop="8dp"
        android:text="@string/nameingredient_textview"
        android:textStyle="normal"
        android:layout_gravity="center_vertical"
        tools:textSize="16sp" />

    <TextView
        android:id="@+id/ingredientItem_qtyTextView"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="4dp"
        android:text="@string/qtyingredient_textview"
        android:textStyle="normal|bold"
        android:layout_gravity="center_vertical"
        tools:textSize="16sp" />



</LinearLayout>