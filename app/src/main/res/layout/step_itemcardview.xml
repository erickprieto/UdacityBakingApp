<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/step_CardView"
    android:layout_width="match_parent"
    android:layout_height="112dp"
    android:layout_margin="8dp"
    android:elevation="2dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="2dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/stepNumber_TextView"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/stepPicture_ImageView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/stepPicture_ImageView"
            android:fontFamily="@font/roboto"
            android:gravity="start|bottom"
            android:text="@string/stepnumber_textview"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stepDescription_TextView"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_below="@+id/stepNumber_TextView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/stepPicture_ImageView"
            android:gravity="start|bottom"
            android:maxLines="2"
            android:text="@string/stepdescription_textview"
            tools:textSize="14sp" />

        <ImageView
            android:id="@+id/stepPicture_ImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>